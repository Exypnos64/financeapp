# Plaid API credentials (from dashboard.plaid.com when you sign up)
PLAID_CLIENT_ID=your_client_id        # Your unique Plaid app ID
PLAID_SECRET=your_sandbox_secret      # Secret key (like an API key)
PLAID_ENV=sandbox                     # Which Plaid environment: sandbox (testing), development, or production

# Database connection info
MYSQL_HOST=db                         # Hostname - 'db' is the Docker service name
MYSQL_PORT=3306                       # Standard MySQL port
MYSQL_USER=financeapp                 # Database username
MYSQL_PASSWORD=your_password          # Database password
MYSQL_DATABASE=finance_db             # Database name

# API settings
API_PORT=8000                         # Port your FastAPI runs on